
{{#if this.events}}  
{{#each this.events}} 
          <div class="card mt-2">
            <div class="card-body p-0">
              {{#if this.picture}}  
              <div class="card-image">
                <img src="{{this.picture}}" width="100%">
              </div>
              {{/if}}	
              <div class="p-2">
                <h4 class="mt-2">{{this.name}}</h4>
                <p>{{this.description}}</p>
                <p>Kokku vaja: {{this.sum}} â‚¬ (per laps)</p>
              </div>
              <div class="p-2">
                <div class="progress">
                    <div class="progress-bar" style="width:65%; background:#130269;">
                        <div class="progress-value">65%</div>
                    </div>
                </div>
              </div>
            </div>
          </div>
          {{/each}}
{{/if}}	